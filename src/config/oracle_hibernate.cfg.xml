<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.OracleDialect</property>
    <property name="hibernate.connection.driver_class">oracle.jdbc.OracleDriver</property>
    <property name="hibernate.connection.url">jdbc:oracle:thin:@127.0.0.1:1521:XE</property>
    <property name="hibernate.connection.username">system</property>
    <property name="hibernate.connection.password">lejoba</property>
    <property name="hibernate.show_sql">true</property>
    <property name="hibernate.format_sql">true</property>
    
    <mapping class="modelo.Aluno"/>
    <mapping class="modelo.Disciplina"/>
    <mapping class="modelo.Endereco"/>
    <mapping class="modelo.Funcionario"/>
    <mapping class="modelo.Nota"/>
    <mapping class="modelo.Perfil"/>
    <mapping class="modelo.Professor"/>
    <mapping class="modelo.Telefone"/>
    <mapping class="modelo.Turma"/>
    <mapping class="modelo.Usuario"/>   
  </session-factory>
</hibernate-configuration>
